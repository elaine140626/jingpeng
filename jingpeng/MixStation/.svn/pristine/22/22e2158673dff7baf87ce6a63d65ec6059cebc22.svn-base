//接收项目路径
var baseUrl = "";
var testName = "";
$(function() {
	
	//转码解析跳页参数
	var afterUrl =  decodeURI(window.location.search.substring(1));
	if(afterUrl != "") {
		//按 ‘&’ 分割成数组
		var store =  afterUrl.toString().split("&");
		//查询 ‘=’ 号位置
		var index = store[0].indexOf('=');
		//通过位置来截取传过来的值
		var serialNumber = store[0].substring(index+1,store[0].length);
		
		//查询 ‘=’ 号位置
		var index1 = store[1].indexOf('=');
		//通过位置来截取传过来的值
		testName = store[1].substring(index1+1,store[1].length);
	}
	//获取路径
	baseUrl = getContextPath();
	csh(serialNumber);
});

function csh(serialNumber){
