<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="organizationInfo">

	<select id="getOrganizationInfo"  resultType="java.util.Map">
		
		select count(*) as a from Organization_Info
		
	</select>
	
	
	<select id="getOrgInfo" parameterType="java.util.HashMap"  resultType="userInfo">
		
		select Id id,Org_Name orgName from Organization_Info where Parent_id in(select org_id  from User_info where name = #{name} )
		    		       
	</select>
	
	
</mapper>