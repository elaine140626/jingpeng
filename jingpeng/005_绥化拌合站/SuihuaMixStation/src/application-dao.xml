    <bean id="txManager2" class="org.springframework.jdbc.datasource.DataSourceTransactionManager" p:dataSource-ref="dataSource2"></bean>
    <tx:annotation-driven transaction-manager="txManager2"></tx:annotation-driven>
</beans>